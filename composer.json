{
    "name": "t3g/svg-sanitizer",
    "description": "Sanitize SVG files on upload, works with all fall uploads.",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "TYPO3 GmbH",
            "role": "Developer",
            "homepage": "https://typo3.com/"
        }
    ],
    "replace": {
        "svg_sanitizer": "self.version",
        "t3g/svg_sanitizer": "self.version"
    },
    "require": {
        "typo3/cms-core": "^7.6 || ^8.7 || <9.9",
        "enshrined/svg-sanitize": "^0.7.1",
        "symfony/finder": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "T3G\\SvgSanitizer\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "T3G\\SvgSanitizer\\Tests\\": "Tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.5"
    }
}
